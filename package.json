    "gql-merge": "^0.0.6",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.0.10",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.5",
    "graphql-upload": "^10.0.0",
